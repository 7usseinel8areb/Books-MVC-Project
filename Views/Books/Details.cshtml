@model Book

<ul class="list-group list-group-flush">

    <li class="list-group-item bg-secondary text-white font-weight-bold d-flex justify-content-between align-items-center">
        <span>@Model.Name</span>
        <a asp-action="Edit" asp-controller="Books" asp-route-id="@Model.Id">
            <i class="bi bi-pencil-square text-white"></i>
        </a>
    </li>

    <li class="list-group-item">
        <b>Category: </b>
        @Model.Category.Name
    </li>

    <li class="list-group-item">
        <b>Author: </b>
        @Model.Author
    </li>

    <li class="list-group-item">
        <b>Description</b><br />
        @Model.Description
    </li>

    <li class="list-group-item">
        <b>Date added on: </b>
        @Model.AddedOn
    </li>
</ul>

    